{
  "name": "node-ts-api-starter",
  "version": "1.0.0",
  "description": "API starter pack for Node.js with TypeScript",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node-esm src/index.ts",
    "start": "node build/index.js",
    "lint": "ts-standard",
    "tsc": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "pabloSuarezDev",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.16",
    "bcrypt": "5.1.1",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "jwt-simple": "0.5.6",
    "moment": "2.29.4",
    "mysql2": "3.6.3",
    "sequelize": "6.35.1"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "nodemon": "3.0.1",
    "ts-node": "10.9.1",
    "ts-standard": "12.0.2",
    "typescript": "5.2.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "rules": {
      "@typescript-eslint/semi": "off",
      "@typescript-eslint/space-before-function-paren": "off",
      "@typescript-eslint/no-misused-promises": "off"
    }
  }
}
